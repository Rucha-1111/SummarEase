{
    "manifest_version": 3,
    "name": "SummarEase",
    "version": "1.2.0",
    "description": "Summarize selected text instantly with AI.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/48.png"
    },
    "host_permissions": [
        "https://my-summarease-backend-url-render.onrender.com*"
    ],
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    }
}